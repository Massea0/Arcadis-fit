# Arcadis Fit Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================
# SERVER CONFIGURATION
# =============================================
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# =============================================
# DATABASE CONFIGURATION (Supabase)
# =============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================
# AUTHENTICATION & SECURITY
# =============================================
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# =============================================
# SMS & PHONE VERIFICATION (Twilio)
# =============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================
# PAYMENT GATEWAY (DEXCHANGE API)
# =============================================
DEXCHANGE_API_URL=https://api.dexchange.com
DEXCHANGE_API_KEY=your-dexchange-api-key
DEXCHANGE_SECRET_KEY=your-dexchange-secret-key
DEXCHANGE_MERCHANT_ID=your-merchant-id

# =============================================
# AI SERVICES
# =============================================
NUTRITION_AI_URL=http://localhost:8001
WORKOUT_AI_URL=http://localhost:8002
AI_API_KEY=your-ai-service-api-key

# =============================================
# FILE STORAGE (Supabase Storage)
# =============================================
SUPABASE_STORAGE_BUCKET=arcadis-fit-assets
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# =============================================
# EMAIL CONFIGURATION
# =============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@arcadis-fit.com

# =============================================
# REDIS CACHE (Optional)
# =============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================
# MONITORING & ANALYTICS
# =============================================
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# =============================================
# PUSH NOTIFICATIONS
# =============================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# =============================================
# THIRD-PARTY INTEGRATIONS
# =============================================
GOOGLE_FIT_CLIENT_ID=your-google-fit-client-id
GOOGLE_FIT_CLIENT_SECRET=your-google-fit-client-secret
HEALTHKIT_ENABLED=true

# =============================================
# CORS & SECURITY
# =============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://arcadis-fit.com
CORS_CREDENTIALS=true

# =============================================
# RATE LIMITING
# =============================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# =============================================
# LOGGING
# =============================================
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# =============================================
# FEATURE FLAGS
# =============================================
ENABLE_AI_FEATURES=true
ENABLE_PAYMENT_PROCESSING=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# =============================================
# DEVELOPMENT & TESTING
# =============================================
ENABLE_SWAGGER=true
ENABLE_DEBUG_MODE=true
MOCK_PAYMENT_GATEWAY=false
MOCK_SMS_SERVICE=false

# =============================================
# PERFORMANCE & SCALING
# =============================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_MS=30000
DATABASE_POOL_SIZE=10
DATABASE_CONNECTION_TIMEOUT=5000

# =============================================
# BACKUP & RECOVERY
# =============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================
# LOCALIZATION
# =============================================
DEFAULT_LANGUAGE=fr
SUPPORTED_LANGUAGES=fr,en,wo
TIMEZONE=Africa/Dakar

# =============================================
# BUSINESS LOGIC
# =============================================
DEFAULT_CURRENCY=XOF
DEFAULT_COUNTRY=Senegal
DEFAULT_PHONE_CODE=+221
MIN_PASSWORD_LENGTH=8
MAX_PASSWORD_LENGTH=128

# =============================================
# WORKOUT & FITNESS
# =============================================
DEFAULT_WORKOUT_DURATION_MINUTES=60
MAX_WORKOUT_DURATION_MINUTES=180
DEFAULT_REST_TIME_SECONDS=90
MAX_SETS_PER_EXERCISE=10
MAX_REPS_PER_SET=100

# =============================================
# NUTRITION
# =============================================
DEFAULT_CALORIE_GOAL=2000
MIN_CALORIE_GOAL=1200
MAX_CALORIE_GOAL=5000
DEFAULT_PROTEIN_RATIO=0.25
DEFAULT_CARBS_RATIO=0.45
DEFAULT_FAT_RATIO=0.30

# =============================================
# MEMBERSHIP & PAYMENTS
# =============================================
DEFAULT_MEMBERSHIP_DURATION_DAYS=30
MAX_MEMBERSHIP_DURATION_DAYS=365
AUTO_RENEWAL_ENABLED=true
PAYMENT_RETRY_ATTEMPTS=3
PAYMENT_RETRY_DELAY_MS=5000

# =============================================
# NOTIFICATIONS
# =============================================
WORKOUT_REMINDER_HOUR=8
NUTRITION_REMINDER_HOUR=12
PAYMENT_REMINDER_DAYS_BEFORE=7
MEMBERSHIP_EXPIRY_REMINDER_DAYS_BEFORE=3

# =============================================
# PRIVACY & COMPLIANCE
# =============================================
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years
ANONYMIZATION_ENABLED=true
COOKIE_CONSENT_REQUIRED=true

# =============================================
# API VERSIONING
# =============================================
API_VERSION=v1
API_DEPRECATION_WARNING_DAYS=90

# =============================================
# CUSTOMIZATION
# =============================================
APP_NAME=Arcadis Fit
APP_DESCRIPTION=Comprehensive Fitness Platform for Senegal
APP_VERSION=1.0.0
SUPPORT_EMAIL=support@arcadis-fit.com
SUPPORT_PHONE=+221 33 123 45 67